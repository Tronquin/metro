<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :isbn_id, class: "control-label" %>
    <%= number_input f, :isbn_id, class: "form-control" %>
    <%= error_tag f, :isbn_id %>
  </div>

  <div class="form-group">
    <%= label f, :card_id, class: "control-label" %>
    <%= number_input f, :card_id, class: "form-control" %>
    <%= error_tag f, :card_id %>
  </div>

  <div class="form-group">
    <%= label f, :card_id, class: "control-label" %>
    <%= number_input f, :card_id, class: "form-control" %>
    <%= error_tag f, :card_id %>
  </div>

  <div class="form-group">
    <%= label f, :copy_id, class: "control-label" %>
    <%= number_input f, :copy_id, class: "form-control" %>
    <%= error_tag f, :copy_id %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
